@model List<ItemsModelForMainPage>

@{
    Layout = null;

}

<h3>Last three created items </h3>

<div class="container">

    <div class="row">
        @foreach (var n in Model)
        {
            <div style="border:5px solid black; border-radius: 10px; margin:0 auto 20px;  text-align:center" class="col-5">

                <div>
                    <input type="hidden" asp-for="@n.Id" class="form-control" id="Id">
                </div>

                <div>
                    <label asp-for="@n.CollectionName" class="form-label"><strong>Item name: </strong></label>
                    <label asp-for="@n.CollectionName" class="form-label"><strong>@n.CollectionName </strong></label>
                </div>

                 <div>
                    <label asp-for="@n.Name" class="form-label"> Item name:  </label>
                    <label asp-for="@n.Name" class="form-label"> @n.Name  </label>
                </div>

                
                 
                <a style="margin-bottom:5px; width:250px" class="btn btn-primary" asp-area="" asp-controller="Item" asp-action="GetItemById" asp-route-id="@n.Id">Show More</a>
                  
            </div>
        }
    </div>

</div>


