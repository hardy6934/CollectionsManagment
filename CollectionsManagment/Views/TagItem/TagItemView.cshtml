@model List<TagItemModel>

@{
    ViewData["Title"] = "Tags";

}
<div class="container">

    <a style="margin-bottom:5px; width:150px" class="btn btn-primary" asp-area="" asp-controller="TagItem" asp-action="CreateTagItem" asp-route-id="@ViewBag.ItemId">Create a new tag</a>

    <div class="row">
        @foreach (var n in Model)
        { 

                <div style="border:5px solid black; border-radius: 10px; margin:0 auto 20px;  text-align:center" class="col-5">

                    <div>
                        <input type="hidden" asp-for="@n.Id" class="form-control" id="Id">
                    </div>


                    <div>
                        <label asp-for="@n.Tag.TagName" class="form-label">TagName: </label>
                        <label asp-for="@n.Tag.TagName" class="form-label">@n.Tag.TagName</label>
                    </div>

                     
                    <a style="margin-bottom:5px; width:150px" class="btn btn-primary" asp-area="" asp-controller="TagItem" asp-action="RemoveTagItem" asp-route-id="@n.Id">Remove</a> <br/>
                </div>

        }
    </div>

</div>