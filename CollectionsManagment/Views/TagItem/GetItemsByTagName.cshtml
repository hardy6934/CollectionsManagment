                }
                 
                    <a style="margin-bottom:5px; width:250px" class="btn btn-primary" asp-area="" asp-controller="Item" asp-action="GetItemById" asp-route-id="@n.Item.Id">Show More</a>
               
                     
            </div>
        }
    </div>

</div> 