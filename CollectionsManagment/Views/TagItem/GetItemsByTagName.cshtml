                        <label asp-for="@n.Item.ThirdDatetimeField" class="form-label">@n.Item.ThirdDatetimeField </label>
                    </div>
                }

                @if (n.Item.FirstBoolField != null)
                {
                    <div>
                        <label asp-for="@n.Item.FirstBoolFieldName" class="form-label">@n.Item.FirstBoolFieldName </label>
                        <label asp-for="@n.Item.FirstBoolField" class="form-label">@n.Item.FirstBoolField</label>
                    </div>
                }

                @if (n.Item.SecondBoolField != null)
                {
