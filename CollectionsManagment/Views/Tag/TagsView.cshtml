@model List<TagModel>

@{
    ViewData["Title"] = "Tags";

}
<div class="container">

    <a style="margin-bottom:5px; width:150px" class="btn btn-primary" asp-area="" asp-controller="Tag" asp-action="CreateTag">Create a new tag</a>

    <div class="row">
        @foreach (var n in Model)
        { 

            <div style="border:5px solid black; border-radius: 10px; margin:0 auto 20px;  text-align:center" class="col-5">

                <div>
                    <input type="hidden" asp-for="@n.Id" class="form-control" id="Id">
                </div>
                 

                <div>
                    <label asp-for="@n.TagName" class="form-label">TagName: </label>
                    <label asp-for="@n.TagName" class="form-label">@n.TagName</label>
                </div>


                <a style="margin-bottom:5px; width:150px" class="btn btn-primary" asp-area="" asp-controller="Tag" asp-action="UpdateTag" asp-route-id="@n.Id">Edit</a><br />
                <a style="margin-bottom:5px; width:150px" class="btn btn-primary" asp-area="" asp-controller="Tag" asp-action="RemoveTag" asp-route-id="@n.Id">Remove</a> 
            </div>

        }
    </div>

</div>