@model List<CollectionModel>

@{
    ViewData["Title"] = "Collections";

}

<a style="margin-bottom:5px;" class="btn btn-primary" asp-area="" asp-controller="Collection" asp-action="AddCollection">Create a new wonderful collection</a>

<div class="container">

    <div class="row">
        @foreach (var n in Model)
        { 
             
            <div style="border:5px solid black; border-radius: 10px; margin:0 auto 20px;  text-align:center" class="col-5">

                <div>
                    <input type="hidden" asp-for="@n.Id" class="form-control" id="Id">
                </div>

                <div>
                    <label asp-for="@n.CollectionName" class="form-label">Collection name: </label>
                    <label asp-for="@n.CollectionName" class="form-label">@n.CollectionName</label>
                </div>
                  
                <div>
                    <label asp-for="@n.Description" class="form-label">Description: </label>
                    <label asp-for="@n.Description" class="form-label">@n.Description</label>
                </div>

                  
                <a style="margin-bottom:5px; width:250px" class="btn btn-primary" asp-area="" asp-controller="Collection" asp-action="DeleteCollection" asp-route-id="@n.Id">Delete</a> 
                <a style="margin-bottom:5px; width:250px" class="btn btn-primary" asp-area="" asp-controller="Item" asp-action="AddItem" asp-route-id="@n.Id">Add collection's item</a> <br />
                <a style="margin-bottom:5px; width:250px" class="btn btn-primary" asp-area="" asp-controller="Item" asp-action="ItemsView" asp-route-id="@n.Id">Items View</a> <br />
            </div>

        }
    </div>

</div>