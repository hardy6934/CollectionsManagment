@model CollectionModel

@{
    ViewData["Title"] = "New Collection";

}
<h3>Form of Creating a wonderfull collection</h3>

        <form asp-controller="Collection" asp-action="AddCollection" method="post">

            <div class="authorize">
                   
                <div>
                    <label for="name" class="form-label">Collection name: </label>
                    <input type="text" asp-for="CollectionName" class="form-control" id="name" required>
                    <span asp-validation-for="CollectionName" class="text-danger"></span> 
                </div>

                <div>
                    <label for="description" class="form-label">Description: </label>
                    <input type="text" asp-for="Description" class="form-control" id="description">
                    <span asp-validation-for="Description" class="text-danger"></span> 
                </div>

                <br />

                <input type="submit" class="btn btn-primary" value="Submit">

            </div>


        </form>
         